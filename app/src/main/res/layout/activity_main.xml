<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jankin.study.popupwindowcompat.MainActivity"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_match"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="高度为match_parent"/>

    <Button
        android:id="@+id/btn_wrap"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="高度为wrap_content"/>

    <Button
        android:id="@+id/btn_fix"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="高度为固定值"/>

    <Button
        android:id="@+id/btn_at_location"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="高度为wrap_content, showAtLocation"/>

</LinearLayout>